    <h3><a href="{{ latest.url }}">{{ latest.data.title }}</a></h3>
    <p>{{ latest.date | date("MMMM d, yyyy") }}</p>
    <p>{{ latest.templateContent | safe }}</p>
  </div>
{% endif %}

